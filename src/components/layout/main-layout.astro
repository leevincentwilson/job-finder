---
import '@/styles/global.css';

interface Props {
  title?: string;
}

const { title = "App with Sidebar" } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
  </head>
  <body>
    <div id="app">
      <slot />
    </div>
  </body>
</html>

